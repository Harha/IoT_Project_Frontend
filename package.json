{
  "name": "iot_frontend",
  "version": "0.0.1",
  "description": "Frontend for IoT Project. Visualizes OPC UA data.",
  "main": "./app/app.js",
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "angular": {
      "depends": [
        "jquery:jQuery"
      ],
      "exports": "angular"
    },
    "bootstrap": {
      "depends": [
        "jquery:jQuery"
      ],
      "exports": "bootstrap"
    }
  },
  "scripts": {
    "clean": "rimraf ./dist && mkdir dist && mkdir dist\\scripts && mkdir dist\\css",
    "build:js": "browserify ./app/app.js -o ./dist/scripts/bundle.js",
    "build:html": "cpx ./app/**/*.html ./dist/",
    "build:css": "cpx ./app/**/*.css ./dist/css/ && cpx ./node_modules/bootstrap/dist/css/bootstrap.min.css ./dist/css/",
    "uglify:js": "uglifyjs ./dist/bundle.js --compress --output ./dist/bundle.js",
    "build:dev": "npm run clean && npm run build:js && npm run build:html && npm run build:css",
    "build:prod": "npm run clean && npm run build:js && npm run uglify:js && npm run build:html && npm run build:css",
    "serve": "node server.js"
  },
  "keywords": [
    "iot",
    "frontend",
    "opc",
    "ua",
    "opc",
    "ua"
  ],
  "author": "harha",
  "license": "MIT",
  "dependencies": {
    "angular": "1.5.8",
    "angular-animate": "^1.5.8",
    "angular-chart.js": "1.0.3",
    "angular-loading-bar": "0.9.0",
    "angular-resource": "1.5.8",
    "angular-ui-bootstrap": "^2.2.0",
    "bootstrap": "^3.3.7",
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "browserify-shim": "^3.8.12",
    "connect": "3.5.0",
    "serve-static": "1.11.1"
  }
}
